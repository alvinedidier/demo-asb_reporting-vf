                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>


    <script>
        
        function fetchReport() {
            $.ajax({
                method: "POST",
                url: '/r/<%=campaign.campaign_crypt%>/report',
                success: function (data) {
                    window.location.href = '/r/<%=campaign.campaign_crypt%>';
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Erreur lors de la génération du rapport:', textStatus, errorThrown);
                }
            });
        }

        
    document.addEventListener('DOMContentLoaded', () => {
        fetchReport(); 
           
        
        const progressBar = document.getElementById('progress-bar');
        
        // Vérifier si la barre de progression existe
        if (!progressBar) {
            console.error("Élément 'progress-bar' non trouvé dans le DOM.");
            return;
        }
        
        const totalDuration = 60000; // 1 minute en millisecondes
        let elapsedTime = 0;
        let progressPercentage = 0;

        // Fonction pour obtenir un délai aléatoire en millisecondes (entre 500 et 2000 ms)
        function getRandomDelay() {
            return Math.floor(Math.random() * (2000 - 500 + 1)) + 500;
        }

        // Fonction pour obtenir une progression aléatoire en pourcentage (entre 1% et 5%)
        function getRandomProgressIncrement() {
            return Math.random() * (5 - 1) + 1;
        }

        function updateProgress() {
            // Incrémenter le temps écoulé et la progression de manière aléatoire
            elapsedTime += getRandomDelay();
            progressPercentage += getRandomProgressIncrement();

            // Limiter la progression maximale à 100%
            progressPercentage = Math.min(progressPercentage, 100);
            
            // Mettre à jour la barre de progression
            progressBar.style.width = `${progressPercentage}%`;
            progressBar.setAttribute('aria-valuenow', progressPercentage);
            progressBar.innerText = `${Math.round(progressPercentage)}%`;

            // Arrêter la progression lorsque le totalDuration ou 100% est atteint
            if (elapsedTime >= totalDuration || progressPercentage >= 100) {
                alert("Le temps imparti est écoulé ou la progression est terminée.");
            } else {
                // Continuer la progression avec un délai aléatoire
                setTimeout(updateProgress, getRandomDelay());
            }
        }

        // Démarrer la barre de progression
        updateProgress();
    });
</script>


</body>

</html>